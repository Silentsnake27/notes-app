<div class="row p-3">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body"> <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                {{!-- card-title d-flex justify-content-between align-items-center --}}
                <h4 class="card-title title-h4">
                    {{title}}
                </h4>
                <p class="description">
                    {{description}}
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">

                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Borrar
                        </button>
                    </form>
                </p>

            </div>
        </div>
    </div>
    {{else}}
    <div class=" card mx-auto">
        <div class="card-body">
    <h1>Hello {{user.name}} :D</h1>
            <h5>
            <p>No hay notas aun :c</p>
                
            </h5>
            <a href="/notes/add" class="btn btn-dark btn-block">Crea una! :D</a>
        </div>
    </div>
    {{/each}}
</div>